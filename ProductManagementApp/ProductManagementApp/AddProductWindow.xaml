        <Label Content="Id" HorizontalAlignment="Left" Margin="202,88,0,0" VerticalAlignment="Top" Height="32" Width="38"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="202,127,0,0" VerticalAlignment="Top" Height="32" Width="80"/>
